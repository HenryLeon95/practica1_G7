public class OperacionesBasicas{
    
    public static boolean esPrimo(int numero){
        int contador = 2;
        boolean primo=true;
        while ((primo) && (contador!=numero)){
            if (numero % contador == 0)
            primo = false;
            contador++;
        }
        return primo;
    }

    public int AreaTriangulo(int base, int altura){
        int area= (base*altura)/2;
        return area;
    }

    public boolean VerificarPar(int numero){
        if(numero % 2 == 0){
            return true;
        }
        else {
            return false;
        }
    }

    public int SumatoriaSucesiva(int numero)
    {
        int sumatoria = 0;
        int cont = 0;

        while (cont <= numero) {
            sumatoria = sumatoria + cont;
            cont++;
        }

        return sumatoria;
    }   
}

